<section class="container">
	<div
		class="d-flex align-items-center p-3 my-3 text-white bg-purple rounded shadow-sm"
	>
		{{! <img
			class="me-3"
			src="/docs/5.0/assets/brand/bootstrap-logo-white.svg"
			alt=""
			width="48"
			height="38"
		/> }}

	</div>

	<div class="my-3 p-3 bg-body rounded shadow-sm">
		<h6 class="border-bottom pb-2 mb-0">Posts </h6>
		{{#if loggedIn}}
			{{#each posts}}
				<div class="d-flex text-muted pt-3 border-bottom">
					<svg
						class="bd-placeholder-img flex-shrink-0 me-2 rounded"
						width="32"
						height="32"
						xmlns="http://www.w3.org/2000/svg"
						role="img"
						aria-label="Placeholder: 32x32"
						preserveAspectRatio="xMidYMid slice"
						focusable="false"
					><title>Placeholder</title><rect
							width="100%"
							height="100%"
							fill="#4484ce"
						></rect><text
							x="50%"
							y="50%"
							fill="#4484ce"
							dy=".3em"
						>32x32</text></svg>

					<a href="/post/{{id}}" style="text-decoration: none;">
						<div class="pb-3 mb-0 small lh-sm border-bottom w-100">
							<div class="d-flex justify-content-between align-items-center">
								<p>
									<strong class="text-primary fw-bold">{{title}}</strong>
								</p>

							</div>
							<div class="text-dark fw-bold">{{content}}</div>
							<div>&nbsp;</div>
							<div class="d-block text-warning fw-bold">By
								{{user.username}}
								&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{format_date
									created_at
								}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{comment_count}}
								comment(s)</div>
						</div>

					</a>

				</div>
			{{/each}}
		{{else}}
			{{#each posts}}
				<div class="d-flex text-muted pt-3">
					<svg
						class="bd-placeholder-img flex-shrink-0 me-2 rounded"
						width="32"
						height="32"
						xmlns="http://www.w3.org/2000/svg"
						role="img"
						aria-label="Placeholder: 32x32"
						preserveAspectRatio="xMidYMid slice"
						focusable="false"
					><title>Placeholder</title><rect
							width="100%"
							height="100%"
							fill="#4484ce"
						></rect><text
							x="50%"
							y="50%"
							fill="#4484ce"
							dy=".3em"
						>32x32</text></svg>

					{{!-- //	<a href="/post/{{id}}" style="text-decoration: none;"> --}}
					<div class="pb-3 mb-0 small lh-sm border-bottom w-100">
						<div class="d-flex justify-content-between align-items-center">
							<p>
								<strong class="text-primary fw-bold">{{title}}</strong>
							</p>

						</div>
						<div class="text-dark-gray fw-bold">{{content}}</div>
						<div>&nbsp;</div>
						<div class="d-block text-warning fw-bold">By
							{{user.username}}
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{format_date
								created_at
							}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{comment_count}}
							comment(s)</div>
					</div>

					{{! </a> }}

				</div>
			{{/each}}
		{{/if}}
	
		<small class="d-block text-end mt-3">
			<a href="#">&nbsp;</a>
		</small>
	</div>

	
		<small class="d-block text-end mt-3">
			<a href="#">&nbsp;</a>
		</small>
	</div>
</section>